@model MilasDGaz.Models.Contact
@{
    ViewBag.Title = "UpdateContact";
    Layout = "~/Views/Shared/_AdminLayoutPage.cshtml";
}

<br />
<h3>Mesajı Güncelle</h3>
<br />
<form method="post">
    @Html.HiddenFor(x => x.Id, new { @class = "form-control" })
    <label>İsim</label>
    @Html.TextBoxFor(x => x.NameSurname, new { @class = "form-control" })
    <br />

    <label>Email</label>
    @Html.TextBoxFor(x => x.Phone, new { @class = "form-control" })
    <br />
    <label>Konu</label>
    @Html.TextBoxFor(x => x.Subject, new { @class = "form-control" })
    <br />
    <label>Yorum</label>
    @Html.TextAreaFor(x => x.Message, 5, 1, new { @class = "form-control" })
    <br />
    <button class="btn btn-success">Güncelle</button>
</form>
