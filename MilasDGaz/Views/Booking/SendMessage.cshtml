﻿
@model MilasDGaz.Models.Booking
<div class="container position-relative wow fadeInUp" data-wow-delay="0.1s" style="margin-top: -6rem;">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="bg-light text-center p-5">
                <h1 class="mb-4">Randevu Oluştur</h1>
                <form method="post" action="@Url.Action("Index","AdminBooking")">
                    <div class="row g-3">
                        <div class="col-12 col-sm-6">
                           
                            <input type="text" class="form-control border-0" name="NameSurname" placeholder="İsim Soyisim" style="height: 55px;">
                        </div>
                        <div class="col-12 col-sm-6">
                            <input type="text" class="form-control border-0" name="Phone" placeholder="Telefon No" style="height: 55px;">
                        </div>
                        <div class="col-12 col-sm-6">
                            @*<select class="form-select border-0" name="Subject" style="height: 55px;">
                                    <option selected>Servis Seç</option>
                                    <option value="1">Doğalgaz Keşfi</option>
                                    <option value="2">Petek Temizliği</option>
                                    <option value="3">Tesisat Reviziyon</option>
                                </select>*@
                            <input type="text" class="form-control border-0" name="Subject" placeholder="Konu" style="height: 55px;">
                        </div>
                        <div class="col-12 col-sm-6">
                            <div class="date" id="date1" name="Date" data-target-input="nearest">
                                @*<input type="text"
                                    class="form-control border-0 datetimepicker-input"
                                    placeholder="Tarih" data-target="#date1" data-toggle="datetimepicker" style="height: 55px;">*@
                                @Html.TextBoxFor(model => model.Date, "{0:yyyy-MM-dd}", new { @type = "date", @style = "height: 55px;", @class = "form-control border-0 datetimepicker-input" })
                            </div>
                        </div>
                        <div class="col-12">
                            <textarea class="form-control border-0" name="Description" placeholder="Mesajınız"></textarea>
                        </div>
                        <div class="col-12">
                            <button class="btn btn-primary w-100 py-3" type="submit">Randevu Oluştur</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>