@model List<MilasDGaz.Models.Us>
<div class="container-fluid bg-dark text-light footer pt-5 mt-5 wow fadeIn" data-wow-delay="0.1s">
    <div class="container py-5">
        <div class="row g-5">
            @foreach (var item in Model)
            {
                <div class="col-lg-3 col-md-6">
                    <h4 class="text-light mb-4">Adres</h4>
                    <p class="mb-2"><i class="fa fa-map-marker-alt me-3"></i>@item.Adress</p>
                    <p class="mb-2"><i class="fa fa-phone-alt me-3"></i>@item.Phone1</p>
                    <p class="mb-2"><i class="fa fa-fax me-3"></i>@item.Fax</p>
                    <p class="mb-2"><i class="fa fa-envelope me-3"></i>@item.Email</p>
                    <div class="d-flex pt-2">
                        <a class="btn btn-outline-light btn-social" href="@item.Whatsapp"><i class="fab fa-whatsapp"></i></a>
                        <a class="btn btn-outline-light btn-social" href="@item.Facebook"><i class="fab fa-facebook-f"></i></a>
                        <a class="btn btn-outline-light btn-social" href="@item.Youtube"><i class="fab fa-youtube"></i></a>
                        <a class="btn btn-outline-light btn-social" href="@item.Instagram"><i class="fab fa-instagram"></i></a>
                    </div>
                </div>
            }

            <div class="col-lg-3 col-md-6">
                <h4 class="text-light mb-4">Ofis Saatleri</h4>
                <h6 class="text-light">Pazartesi-Cumartesi:</h6>
                <p class="mb-4">08.00 - 19.00 arası </p>

            </div>
           @Html.Action("FooterService","Default")
        </div>
    </div>
    <div class="container">
        <div class="copyright">
            <div class="row">
                <div class="col-md-6 text-center text-md-start mb-3 mb-md-0">
                    &copy; <a class="border-bottom" href="#">Milas Gaz Mühendislik</a>, Bütün Hakları Saklıdır.
                </div>
                
            </div>
        </div>
    </div>
</div>